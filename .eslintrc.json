{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "xo"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "object-curly-spacing": ["warn", "always"],
        "curly": ["error", "multi-line"],

        "no-unused-vars": ["error", { "argsIgnorePattern": "er" }],

        "no-return-assign": "warn",
        "no-negated-condition": "warn",

        "max-statements-per-line": "off",
        "semi": ["warn", "never"],
        "radix": "off",
        "eqeqeq": "off",
        "arrow-parens": "off",
        "no-return-await": "off",
        "max-params": "off",
        "camelcase": "warn",
        "new-cap": "warn",
        "padding-line-between-statements": ["warn", { "blankLine": "never", "prev": "*", "next": "return" }],
        "comma-dangle": ["error", {"arrays": "ignore"}],
        "no-lonely-if": "off",
        "array-bracket-spacing": "warn",
        "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true, "ConditionalExpression": true, "CallExpression": true } }],
        "no-implicit-coercion": ["error", {"boolean": false}],
        "padded-blocks": "warn",
        "one-var": "off",
        "space-unary-ops": ["error", {"overrides": { "typeof": false }}],
        "keyword-spacing": ["error", {"overrides": { "throw": { "after": false }}}],
        "prefer-promise-reject-errors": "warn",
        "capitalized-comments": "off",
        "quotes": ["error", "single", { "avoidEscape": true }],
        "operator-assignment": "warn"
    }
}
